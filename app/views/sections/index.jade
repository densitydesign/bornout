extends ../layouts/default

block main
  h3
    span= title
    &nbsp;
    a.btn.btn-small.btn-success(href="/sections/new") New

block content
  - if (sections.length)
    .row-fluid
      - each section in sections
        .span3
          .thumbnail
            .caption
              h3
                a(href='/sections/'+section.slug, title=section.title) #{section.title}
              p= section.description

  - else
    p.muted No sections.&nbsp;
