extends ../layouts/default

block main
  h1= section.title

block content
  .row
    .span9
      p=section.body
      .meta.muted

  p
    br
    form.center.form-inline.confirm(action="/sections/"+section.id, method="post")
      input(type='hidden', name='_csrf', value="#{csrf_token}")
      a.btn(href='/sections/'+section._id+'/edit', title="edit") Edit
      &nbsp;&nbsp;
      input(type="hidden", name="_method", value="DELETE")
      button.btn.btn-danger(type="submit") delete
